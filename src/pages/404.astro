---
import { Button } from '@/components/ui/button'
import '@/styles/global.css'
import background from '@/assets/2.1.0a.png'
import { Image } from 'astro:assets'
import Layout from '@/layouts/BasicLayout.astro'
---

<Layout title='404 - Page Not Found'>
  <main
    class='to-/15 from-/15 flex h-screen w-full flex-col items-center justify-center gap-4 bg-linear-60 text-center'>
    <title>404 - Page Not Found</title>
    <h1 class='text-destructive text-4xl font-black'>404</h1>
    <p>Sorry, the page you are looking for does not exist.</p>
    <Button><a href='/'>Go back home</a></Button>
    <Image
      src={background}
      height={1000}
      alt='404-background'
      class='pointer-events-none absolute inset-0 top-0 left-0 -z-1 h-full object-cover blur-md'
    />
  </main>
</Layout>
