---
import { Image } from 'astro:assets'
import Top from '@/assets/svg/top.svg'
import Background from '@/assets/hero-bg.png'
import Cutout from '@/assets/me-cutout.png'
---

<div class='relative aspect-square w-lg'>
  <svg
    class='pointer-events-none absolute top-0 left-0 z-10 h-full w-full'
    viewBox='0 0 512 512'
    preserveAspectRatio='xMidYMid meet'>
    <defs>
      <mask id='scrollMask' maskUnits='userSpaceOnUse' x='0' y='0' width='512' height='512'>
        <rect width='100%' height='100%' fill='black'></rect>
        <Top />
      </mask>
    </defs>
  </svg>
  <div class='absolute z-0 h-full w-full' style='mask: url(#scrollMask); -webkit-mask: url(#scrollMask);'>
    <Image src={Background} alt='palm tree background' class='absolute aspect-auto w-full' />
  </div>
  <Image
    src={Cutout}
    alt='its me'
    class='absolute left-1/2 w-full -translate-x-1/2 mask-[url(/src/assets/svg/bottom.svg)] mask-exclude mask-luminance mask-contain mask-no-repeat'
  />
</div>
