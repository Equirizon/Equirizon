---
import projectPackage from '@package'

const appVersion = projectPackage.version
---

<style>
  .appVersion {
    background-color: white;
    color: $color-secondary;
    padding: $padding-xsm $padding-sm;
    border-radius: $border-radius-sm;
    font-size: $font-size-sm;
    font-weight: $font-weight-bold;
  }
</style>

<span class='text-xs font-bold'>v{appVersion}</span>{
  import.meta.env.DEV ? (
    <span class='bg-theme-color-primary text-accent rounded-md px-1.5 py-1 text-xs'> dev mode</span>
  ) : (
    ''
  )
}
